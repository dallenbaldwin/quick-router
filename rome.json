{
  "formatter": {
    "enabled": true,
    "indentSize": 2,
    "indentStyle": "space",
    "lineWidth": 80,
    "ignore": [
      "./dist"
    ]
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single"
    }
  },
  "linter": {
    "enabled": true,
    "ignore": [
      "./dist"
    ],
    "rules": {
      "recommended": true,
      "style": {
        "useBlockStatements": "off"
      }
    }
  }
}